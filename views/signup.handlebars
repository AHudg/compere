<section class="row justify-content-center text-center">
  <form
    class="col-10 col-md-8 col-lg-5 col-xl-4 row justify-content-center form-section"
  >
    <h2 class="col-12 text-start form-label">Sign Up</h2>
    <div class="col-12 row">
      <label class="col-12 col-md-4" for="username-signup">Username: </label>
      <input
        class="col-12 col-md-8"
        style="margin-bottom: 20px;"
        type="text"
        id="username-signup"
      />
    </div>

    <div class="col-12 row">
      <label class="col-sm-12 col-md-4" for="email-signup">Email: </label>
      <input
        class="col-sm-12 col-md-8"
        style="margin-bottom: 20px;"
        type="text"
        id="email-signup"
      />
    </div>

    <div class="col-12 row">
      <label class="col-sm-12 col-md-4" for="password-signup">Password: </label>
      <input
        class="col-sm-12 col-md-8"
        style="margin-bottom: 20px;"
        type="password"
        id="password-signup"
      />
    </div>

    <button class="col-6 col-md-4 view-btn" type="submit">Sign Up</button>
  </form>

  <p class="toggle-phrase">If you already have an account. Sign in
    <a class="toggle-link" href="/login">here.</a></p>
</section>

<script src="/javascript/signup.js"></script>
