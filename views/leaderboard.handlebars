<section>
    <h2 class="leaderboard-header">{{title}} Leaderboard</h2>

    {{#if completed}}
    <p class="text-center current-score">The End! Your score was: 90</p>
    {{/if}}

    <div class="row justify-content-center text-center">
        <h3>Top Leaderboards</h3>
        {{#each scores}}
            {{> pop-leaderboard}}
        {{/each}}
    </div>

    {{#if loggedIn}}
    <div id="user-scores">
        <h3>Your Scores</h3>
    </div>
    {{/if}}
</section>